<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical" 
    android:padding="15dp">

    <View 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名："
            android:textColor="@color/text_gray"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="用户名："
            android:textColor="@color/text_gray"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_guider_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群主名："
            android:textColor="@color/text_gray"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_guider_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="user2"
            android:textColor="@color/text_gray"
            android:textSize="20sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_modify_buffersize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调节播放BUFF大小："
            android:textColor="@color/text_gray"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_modify_jian"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txt_modify_buffersize"
            android:text="一" />

        <Button
            android:id="@+id/bt_modify_plus"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edt_modify_buffersize"
            android:layout_toRightOf="@+id/edt_modify_buffersize"
            android:text="+" />

        <EditText
            android:id="@+id/edt_modify_buffersize"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bt_modify_jian"
            android:layout_alignBottom="@+id/bt_modify_jian"
            android:layout_toRightOf="@+id/bt_modify_jian"
            android:ems="10"
            android:hint="user2"
            android:textColor="@color/text_gray"
            android:textSize="20sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/bt_modify_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存" />

</LinearLayout>